!!!
%html
    %head
        %title AcortadorURLs
        %meta{:charset => "utf-8"}/
        %link{:href => "/css/bootstrap.min.css", :rel => "stylesheet"}/
        %link{:href => "/css/style.css", :rel => "stylesheet"}/
    %body
        =yield
        %form(action="/" method="POST")
            %h1 AcortadorURLs
            %label(for="url")
            Introduzca la URL que desea acortar:
            %br
            %input(type="text" name="url" id="myurl" autofocus size=100 accesskey="s")
            %br
            %br
            Introduzca un nombre para la URL corta:
            %br
            %input(type="text" name="url_corta" id="myurl_corta" size=50 accesskey="c")
            %input(type="submit" value="Acortar")
            %script{src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
            %script{src => "../js/bootstrap.min.js"}
